{% extends 'index.html.twig' %}

{% block content %}
    <div class="row">

		<div class="offset-lg-1 col-lg-10 col-xs-12">
            <div class="text-center title-Header">Sujet : {{modeExe}}</div>
			<div class="form-group">
				
                <table class="table">

					{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
					    <tr>
						    <td>
                                <div class="form-group row">
                                    {{ form_label(form.libelle, 'Libell√©', {'label_attr': {'class': 'col-4 col-lg-6 textColor formLib'}}) }}
                                    {{ form_widget(form.libelle, {'attr': {'class': 'form-control col-8 col-lg-6'} }) }}
                                </div>
						    </td>
					    </tr>
			            <tr>
                            <td>
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <input class="btn btn-primary textSize" type="submit" value="Valider"/>
                                        {% if section is defined and section is not null %}
                                            <input type="button" class="btn btn-dark textSize" value="Retour" onclick="window.location.href='{{path('sujet_list_section', {'theme': theme.id, 'section': section.id})}}'"/>                                    
                                        {% else %}
                                            <input type="button" class="btn btn-dark textSize" value="Retour" onclick="window.location.href='{{path('sujet_list_theme', {'theme': theme.id})}}'"/>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
			            </tr>
			        {{ form_end(form) }}

                </table>

            </div>

            {{ include('Templates/Error/flash.html.twig') }}
            {{ include('Templates/Error/error.html.twig') }}
            {{ include('Templates/Error/message.html.twig') }}

        </div>

    </div>

{% endblock %}
