{% extends "index.html.twig" %}

{% block content %}

	<div class="row">

        {{ include('Templates/Navigation/profileNav.html.twig') }}

		<div class="col-8 offset-1">

            <div class="text-center title-Header">Mon Profil</div>

			<div class="form-group">
				
                <table class="table">

					{{ form_start(form, {'action': path('user_edit'), 'method': 'post', 'attr': {'novalidate': 'novalidate'}}) }}
                    
                        <tr>
						    <td>
                                <div class="form-group row">
                                    {{ form_label(form.firstname, 'Nom', {'label_attr': {'class': 'col-6 textColor'} }) }}
                                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control col-6'} }) }}
                                </div>
                                <div class="form-group row">
                                    {{ form_label(form.lastname, 'Pr√©nom', {'label_attr': {'class': 'col-6 textColor'} }) }}
                                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control col-6'} }) }}
                                </div>
                                <div class="form-group row">
                                    {{ form_label(form.username, 'Pseudo', {'label_attr': {'class': 'col-6 textColor'} }) }}
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control col-6'} }) }}
                                </div>
                                <div class="form-group row">
                                    {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'col-6 textColor'} }) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control col-6'} }) }}
                                </div>
						    </td>
					    </tr>
                
					    <tr>
						    <td>
                                <div class="form-group row">
                                    {{ form_label(form.pictureProfile, 'Image de profil', {'label_attr': {'class': 'col-6 textColor'} }) }}
                                    {{ form_widget(form.pictureProfile, {'attr': {'class': 'textColor'}}) }} 
                                </div>
                                {% if user.pictureProfile is defined and user.pictureProfile is not null %}
                                    <div class="form-group row">
                                        <label class="col-8 textColor">Image actuelle</label>
                                        <img id="imgProfil" class="col-3" src="{{asset('upload/imgProfil/'~ user.PictureProfile.PictureFullName)}}">
                                        <i class="fas fa-trash imgCursor" style="float: right; color: white;" onclick="window.location.href='{{path('user_delete_picture', {'picture':user.PictureProfile.id})}}'"></i>
                                    </div>
                                {% endif %}
						    </td>
					    </tr>
			            <tr>
                            <td>
                                <div class="form-group row">
                                    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'col-6 textColor'}, 'placeholder': 'Renseignez votre mot de passe...' }) }}
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control col-6'} }) }}
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-1 col-3">
                                        <input class="btn btn-dark" type="submit" value="Modifier"/>
                                    </div>
                                </div>
                            </td>
			            </tr>
                        
			        {{ form_end(form) }}

                </table>
        
            </div>
            
        </div>


        {{ include('Templates/Error/flash.html.twig') }}
        {{ include('Templates/Error/error.html.twig') }}
        {{ include('Templates/Error/message.html.twig') }}
 



    </div>

{% endblock %}
