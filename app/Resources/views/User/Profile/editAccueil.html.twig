{% extends "index.html.twig" %}

{% block content %}

	<div class="row">

        {{ include('Templates/Navigation/profileNav.html.twig') }}

		<div class="col-8 offset-1">

            <div class="text-center title-Header">Accueil</div>

			<div class="form-group">
				
                <table class="table">

					{{ form_start(form, {'action': path('user_edit_accueil'), 'method': 'post', 'attr': {'novalidate': 'novalidate'}}) }}
                    
                        <tr>
						    <td>
                                {{ form_row(form.activityUnivers) }}
                                {{ form_row(form.activityTheme) }}
                                {{ form_row(form.activityLike) }}
						    </td>
					    </tr>
					    <tr>
						    <td>
                                <div class="form-group row">
                                    <div class="col-lg-1 col-3">
                                        <input class="btn btn-dark" type="submit" value="Modifier"/>
                                    </div>
                                </div>
                            </td>
			            </tr>
                        
			        {{ form_end(form) }}

                </table>
        
            </div>

            {{ include('Templates/Error/flash.html.twig') }}
            {{ include('Templates/Error/error.html.twig') }}
            {{ include('Templates/Error/message.html.twig') }}
            
        </div>

    </div>

{% endblock %}
