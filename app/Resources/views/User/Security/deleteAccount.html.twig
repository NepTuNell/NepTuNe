{% extends "index.html.twig" %}

{% block content %}
    
    <div class="row">
        
        {{ include('Templates/Navigation/profileNav.html.twig') }}
        
        <div class="col-8 offset-1"> 

            <div class="text-center title-Header">Supprimer le compte</div>

            <form action="{{ path('user_delete') }}" method="post" novalidate>
                <div class="form-group row">    
                    <label class="col-4 textColor" for="password">Mot de passe</label>
                    <input type="password" class="form-control col-6" id="password" required name="password" placeholder="Renseignez votre mot de passe actuel..."/>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input class="btn btn-primary button-size" type="submit" value="Supprimer" />
                    </div>
                </div>    
            </form>

            {{ include('Templates/Error/error.html.twig') }}
            {{ include('Templates/Error/message.html.twig') }}
            
        </div>
        
    </div>
    
{% endblock %}
