{% extends "index.html.twig" %}

{% block content %}
    
    <div class="row">
             
        <div class="offset-2 col-8"> 

            <div class="text-center title-Header">Mot de passe</div>

            <form action="{{ path('user_check_account') }}" method="post" novalidate>
                <div class="form-group row">
                    <label class="col-4 textColor" for="email">Email</label>
                    <input type="text" id="email" class="form-control col-6" required name="email" placeholder="Renseignez votre email..."/>
                </div>
                <div class="form-group row">
                    <div class="col-lg-1 col-3">
                        <input class="btn btn-primary" type="submit" value="Valider"/>
                    </div>
                </div> 
            </form>

        </div>

        {{ include('Templates/Error/flash.html.twig') }}
        {{ include('Templates/Error/error.html.twig') }}
        {{ include('Templates/Error/message.html.twig') }}
        
    </div>
   
    
    
{% endblock %}
