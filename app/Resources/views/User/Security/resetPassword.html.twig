{% extends "index.html.twig" %}

{% block content %}
    
    <div class="row">
        
        {{ include('Templates/Navigation/profileNav.html.twig') }}
             
        <div class="col-8 offset-1"> 

            <div class="text-center title-Header">Mot de passe</div>

            <form action="{{ path('user_reset_password') }}" method="post" novalidate>
                <div class="form-group row">    
                    <label class="col-4 textColor" for="password">Ancien mot de passe</label>
                    <input type="password" class="form-control col-6" id="password" required name="password" placeholder="Renseignez votre mot de passe..."/>
                </div>
                <div class="form-group row">
                    <label class="col-4 textColor" for="password1">Nouveau mot de passe</label>
                    <input type="password" id="password1" class="form-control col-6" required name="confirmPassword1" placeholder="Nouveau mot de passe..."/>
                </div>
                <div class="form-group row">
                    <label class="col-4 textColor" for="password2">Confirmation</label>
                    <input type="password" id="password2" class="form-control col-6" required name="confirmPassword2" placeholder="Confirmez le mot de passe..."/>
                </div>
                <div class="form-group row">
                    <div class="col-lg-1 col-3">
                        <input class="btn btn-dark" type="submit" value="Modifier"/>
                    </div>
                </div> 
            </form>
            {{ include('Templates/Error/message.html.twig') }}
        </div>
        
    </div>
   
    
    
{% endblock %}
