<!DOCTYPE HTML>

<html lang="fr">

    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>NepTuNe</title>

        <!-- Bibliothèques Jquery -->
        <script src="{{ asset('js/jquery.js') }}"></script>

        <!-- Bibliothèques Boostrap-->
        <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet"/>

        <!-- Lien icone font awesome et CSS personnel -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <link href="{{ asset('css/FORUM.css') }}" rel="stylesheet"/>

        <!-- Plugin TinyMCE -->
        <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js"></script>
        <script>
            tinymce.init({
                selector: 'textarea',
                width: '100%',
                height: 500,
                branding: false,
                mode: 'exact',
                keep_styles: false
            });
        </script>

        <!-- FOS Routing Bundle -->
        <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

        <!-- development version, includes helpful console warnings -->
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    </head>

    <body>
        <!-- HEADER -->
        <header>
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark" id="myNavBar">
                <div class="collapse navbar-collapse container">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="link" href="">
                                <i class="fas fa-user"></i>
                                Mon espace
                            </a>
                        </li>
                    </ul>
                    {% if not app.user %}
                        <div class="my-2 my-lg-0">
                            <div>
                                <a href="{{path('user_new')}}">S'enregister</a>
                            </div>
                            <div>
                                <a href="{{path('login')}}">Se connecter</a>
                            </div>
                        </div>
                    {% else %}
                        <div class="my-2 my-lg-0">
                            <i class="fas fa-user-circle imgCursor" id="modalImage" style="font-size: 4vh; color: white;"></i>
                        </div>
                    {% endif %}
                    {% if app.user %}
                        <!-- Fenêtre modale informations et déconnexion -->
                        <div class="modal row justify-content-around" id="modalWindow">
                            <div class="text-center col-12" id="modalUsername">Bienvenue
                                {{ app.user.username | striptags | nl2br }}
                            </div>
                            <div class=" text-center col-12 modalDiv">
                                <a href="">
                                    <i class="fas fa-user-edit"></i>Mon compte
                                </a>
                            </div>
                            <div class="text-center col-12">
                                <a id="modalName" href="{{path('logout')}}">Déconnexion</a>
                            </div>
                        </div>
                        <!-- Fenêtre modale informations et déconnexion -->
                    {% endif %}
                </div>
            </nav>
            <!-- Navbar -->
        </header>

        <!-- Corps du site -->
        <div class="container" id="backGround"> 
            {% block body %}{% endblock %}
        </div>
        <!-- Corps du site -->

        <!-- Footer -->
        <footer class="bg-dark" id="main_footer">
            <!-- Footer Links -->
            <div class="container-fluid text-center text-md-left">
                <!-- Grid row -->
                <div class="row">
                    <!-- Grid column -->
                    <div class="col-md-6 mt-md-0 mt-3">
                        <!-- Content -->
                        <h5 class="text-uppercase">Footer Content</h5>
                        <p>Here you can use rows and columns to organize your footer content.</p>
                    </div>
                </div>
                <!-- Copyright -->
                <div class="footer-copyright text-center py-3">© 2018 Copyright:
                    <a href="https://mdbootstrap.com/education/bootstrap/"> MDBootstrap.com</a>
                </div>
                <!-- Copyright -->
            </div>
        </footer>
        <!-- Footer -->

        <!-- Chargement des fonctions javascript personnelles si l'utilisateur est connecté -->
        {% if app.user %}
            <script>
                {{ include('Javascript/baseJS.js') }}
                {% block javascripts %}

                {% endblock %}
            </script>
        {% endif %}

    </body>

</html>